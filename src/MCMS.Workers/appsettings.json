{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "McmsDatabase": "Server=(localdb)\\MSSQLLocalDB;Database=MCMS;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "FileStorage": {
    "RootPath": "W:\\MCMS"
  },
  "EspritAutomation": {
    "ApplyEventName": "Global\\MCS.Apply.Completed",
    "EspritReadyEventName": "Global\\MCS.Esprit.Ready",
    "WaitForReadySignal": true,
    "ReadyWaitTimeoutSeconds": 900,
    "ResetReadyEventAfterSignal": true,
    "ResetApplyEventAfterSignal": true
  }
}
