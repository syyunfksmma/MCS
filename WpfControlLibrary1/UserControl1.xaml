<UserControl x:Class="WpfControlLibrary1.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary1"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="700">
    <Grid Background="White">

        <!-- 📌 PART Setup -->
        <GroupBox Header="- Part(가공품) Setup" Margin="10,10,10,0">
            <Grid Margin="10"Margin="16,0,4,0" Height="120">
                <Grid.RowDefinitions>
                    <RowDefinition Height="59*"/>
                    <RowDefinition Height="288*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <RadioButton x:Name="rdoG54" Content="G54" IsChecked="True" Grid.Column="0" Margin="5,5,5,5" Grid.RowSpan="2"/>
                <RadioButton x:Name="rdoG55" Content="G55" Grid.Column="1" Margin="5,5,5,5" Grid.RowSpan="2"/>
                <TextBox x:Name="txtPartFile" Width="400" IsReadOnly="True" BorderBrush="Black" BorderThickness="1" Margin="0,29,248,11" Grid.ColumnSpan="3"/>
                <Button x:Name="btnSelectPartFile" Content="Part 파일 선택" Grid.Column="2" Click="SelectPartFile" Margin="304,29,126,11"/>
            </Grid>
        </GroupBox>

        <!-- 📌 STOCK Setup -->
        <GroupBox Header="- Stock(소재) Setup" Margin="10,122,10,122">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <RadioButton x:Name="rdoBarStock" Content="Bar Stock" IsChecked="True" Checked="StockTypeChanged" Margin="5"/>
                    <RadioButton x:Name="rdoFileStock" Content="File Stock" Checked="StockTypeChanged" Margin="5"/>
                </StackPanel>

                <!-- Bar Stock 입력 필드 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Stock OD :" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtStockOD" Width="100" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="82,0,34,0"/>
                    <Label Content="Stock LG :" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0"/>
                    <TextBox x:Name="txtStockLG" Width="100" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="106,0,10,0"/>
                </Grid>

                <Grid Grid.Row="2" Margin="0,13,0,-13">
                    <Label Content="Stock ID :" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtStockID" Width="100" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="106,0,10,0"/>
                    <Label Content="Finish LG :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="226,0,0,0"/>
                    <TextBox x:Name="txtFinishLG" Width="100" BorderBrush="Black" BorderThickness="1" Margin="82,0,466,0"/>
                </Grid>

                <!-- File Stock 입력 필드 -->
                <Grid Grid.Row="1" Margin="0,1,0,27" Grid.RowSpan="2" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="241*"/>
                        <ColumnDefinition Width="83*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtStockFile" Grid.Column="0" Margin="7,2,0,12" HorizontalAlignment="Left" Width="403"/>
                    <Button x:Name="btnSelectStockFile" Content="STOCK 파일 선택" Click="SelectStockFile" Margin="415,2,121,12" Grid.ColumnSpan="2" RenderTransformOrigin="0.396,0.522"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- 📌 버튼 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button x:Name="btnGeneratePartStock" Content="PART소재 생성" Width="120" Click="btnLoadCad_Click"/>
            <Button x:Name="btnAlignSolid" Content="ALIGN SOLID" Width="120" Click="btnAlignSolid_Click"/>
            <Button x:Name="btnCancel" Content="취소" Width="120" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
